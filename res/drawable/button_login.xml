<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    	<shape>
      		<gradient
         		 android:startColor="#043c6b"
          		android:endColor="#66a1d2"
          		android:angle="270" />
      		<stroke
       		   android:width="1dp"
       		   android:color="#04356c" />
     		<corners
     		    android:radius="6dp" />
      		<padding
          		android:left="20dp"
          		android:top="10dp"
          		android:right="20dp"
          		android:bottom="10dp" />
    	</shape>
  </item>
    <item  >
        <shape>
      		<solid
          		android:color="#3f8fd2" />
      		<stroke
          		android:width="1dp"
          		android:color="#0b5fa5" />
      		<corners
          		android:radius="6dp" />
      		<padding
          		android:left="20dp"
          		android:top="10dp"
          		android:right="20dp"
          		android:bottom="10dp" />
    		</shape>
    </item>
   
</selector>